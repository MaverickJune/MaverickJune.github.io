{%- comment -%}
Section include: renders a grid of project cards.

Usage from about.html:
  {% include projects.liquid projects=site.projects limit=6 scrollable=true show_on_home=true %}

Accepted front-matter in each _projects/*.md:
  title, description, date, published (default true), show_on_home (optional),
  url/redirect (optional), image or img,
  github (optional), github_stars (optional)

{%- endcomment -%}






{%- assign items = include.projects | default: site.projects -%}
{%- assign limit = include.limit | default: 6 -%}
{%- assign scroll = include.scrollable | default: false -%}

{%- comment -%} 필터링: 미발행 제외 {%- endcomment -%}
{%- assign items = items | where_exp: "p", "p.published != false" -%}

{%- if include.show_on_home -%}
  {%- assign items = items | where: "show_on_home", true -%}
{%- endif -%}

{%- comment -%} 정렬: 최신순 {%- endcomment -%}
{%- assign items = items | sort: "date" | reverse -%}

{%- if limit -%}
  {%- assign items = items | slice: 0, limit -%}
{%- endif -%}

{%- if project.description -%}
  <p class="card-text">{{ project.description }}</p>
{%- endif -%}

{%- if project.status -%}
  <div class="mt-auto">
    <span class="badge status-badge {{ project.status }}">{{ project.status }}</span>
  </div>
{%- endif -%}

<div class="{% if scroll %}scrollable-section{% endif %}">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">

    {%- for project in items -%}
      <div class="col">
        <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
          <div class="card h-100 hoverable">
            {%- assign thumb = project.image | default: project.img -%}
            {%- if thumb -%}
              {%
                include figure.liquid
                loading="eager"
                path=thumb
                sizes="250px"
                alt="project thumbnail"
                class="card-img-top"
              %}
            {%- endif -%}
            <div class="card-body d-flex flex-column">
              <h2 class="card-title">{{ project.title }}</h2>
              {%- if project.description -%}
                <p class="card-text">{{ project.description }}</p>
              {%- endif -%}

              <div class="row ml-1 mr-1 p-0">
                {%- if project.github -%}
                  <div class="github-icon">
                    <div class="icon" data-toggle="tooltip" title="Code Repository">
                      <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                    </div>
                    {%- if project.github_stars -%}
                      <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                        <i class="fa-solid fa-star"></i>
                        <span id="{{ project.github_stars }}-stars"></span>
                      </span>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>

              {%- if project.status -%}
                <div class="mt-auto">
                  <span class="badge status-badge {{ project.status }}">{{ project.status }}</span>
                </div>
              {%- endif -%}
              
            </div>
          </div>
        </a>
      </div>
    {%- else -%}
      <p class="text-muted">No projects to show.</p>
    {%- endfor -%}

  </div>
</div>

